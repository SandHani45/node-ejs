

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark"><% if (title) { %>
              <%= title %>
            <% } %></h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Starter Page</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
              <% event.forEach(function(item){ %> 
            <div class="card">
                                 
                <div class="card-body">
                  <div>
                    <img src="<%= item.image %>" alt="" width= '500px'>
                  </div>
                  <div>
                    <h5 class="card-title"><%= item.title %></h5>
                  </div>
                  <div>
                    <p class="card-text">
                      <%= item.description %>
                    </p>
                  </div>
                  <a href="/admin-guru-ji-vision/edit/<%= item._id %>" class="card-link">Edit</a>
                  <form method="get" action="/admin-guru-ji-vision/<%= item._id %>" style="float:right">
                    <input type="submit" name="delete" class="card-link" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                    <input type="hidden" name="_method"class="card-link"  value="DELETE" />
                  </form>
                </div>
            </div>
            <% }); %>
          </div>
          <!-- /.col-md-6 -->
        
          <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->